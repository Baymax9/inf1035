             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiceGame"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Case marchand" FontSize="36" Padding="0,50" />
        <Button Content="Vendre un dé" FontSize="24" />
        <Button Content="Acheter un dé" FontSize="24" />
        <Button Content="Acheter une face" FontSize="24" />
        <Button Content="Terminer" FontSize="24" Margin="0,20" />
    </StackPanel>
</UserControl>
